<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your opinion matters to us!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/comicneuebold"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_close_popup"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Close"
            app:tint="@color/golden_yellow" />

    </LinearLayout>

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tell us your experience"
        android:textColor="@color/gray_dark"
        android:textSize="16sp"
        android:fontFamily="@font/go3v2" />

    <!-- Review Input -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white">

        <EditText
            android:id="@+id/et_review"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/review_input_border"
            android:gravity="top|start"
            android:hint="Add a review..."
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_dark"
            android:textSize="16sp"
            android:fontFamily="@font/go3v2" />

    </androidx.cardview.widget.CardView>

    <!-- Error Message -->
    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Review cannot be empty!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:fontFamily="@font/go3v2"
        android:visibility="gone" />

    <!-- Post Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_post_review"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/post_button_background"
        android:text="POST"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/comicneuebold"
        android:textStyle="bold"
        android:elevation="4dp" />

</LinearLayout>
