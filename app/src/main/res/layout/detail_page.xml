<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/detail"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/go3v2"
            android:text="Detail"
            android:textSize="30sp"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="430dp"
                android:background="@drawable/white_border"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:layout_width="290dp"
                        android:layout_height="397dp"
                        android:src="@drawable/shingeki_no_kyojin"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:id="@+id/titledets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/comicneuebold"
                    android:text="Title"
                    android:textSize="35sp"
                    android:textColor="@color/yellow" />

                <TextView
                    android:id="@+id/genredets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/go3v2"
                    android:text="Genre"
                    android:textSize="15sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/syndets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/comicneueitalic"
                    android:text="Synopsis"
                    android:textSize="17sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <FrameLayout
                android:layout_width="230dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                >

                <ImageView
                    android:id="@+id/myImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/comic" />

                <!-- Text View (Overlay) -->
                <TextView
                    android:id="@+id/myText"
                    android:fontFamily="@font/comicneuebold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Post A Review ->"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:background="#80000000" /> <!-- Optional semi-transparent background -->
            </FrameLayout>
        </LinearLayout>

