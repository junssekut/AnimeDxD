            <!-- Header with back button and title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/pageTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/go3v2"
                    android:text="DETAIL"
                    android:textSize="30sp"
                    android:textColor="@color/white" />

                <!-- Invisible view for balance -->
                <View
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

            </LinearLayout>

            <!-- Image Container with Border -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="430dp"
                    android:background="@drawable/white_border"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:id="@+id/detailImage"
                            android:layout_width="290dp"
                            android:layout_height="397dp"
                            android:src="@drawable/shingeki_no_kyojin"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Content Details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/titledets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/comicneuebold"
                        android:text="Title"
                        android:textSize="35sp"
                        android:textColor="@color/golden_yellow" />

                    <TextView
                        android:id="@+id/genredets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/go3v2"
                        android:text="Genre"
                        android:textSize="15sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/syndets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/comicneueitalic"
                        android:text="Synopsis"
                        android:textSize="17sp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Post Review Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:gravity="center">
                <FrameLayout
                    android:id="@+id/post_review_frame"
                    android:layout_width="230dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/myImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/comic" />

                    <!-- Text View (Overlay) -->
                    <TextView
                        android:id="@+id/myText"
                        android:fontFamily="@font/comicneuebold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="Post A Review ->"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:background="#80000000" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>

